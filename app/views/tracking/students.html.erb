<div class="clearfix"></div>
<div class="pull-right">
  <br>
  <%= link_to "Dashboard", root_url, class: "btn btn-primary" %>
</div>
<h1>Pre-Service Teacher Goal Competion</h1>
<hr>
<table class="table table-striped table-rotated">
  <thead>
    <tr>
      <th width="60%">Person</th>
      <th width="20%">Major</th>
      <th width="10%">Group</th>
      <th width="20"><span>Research Consent</span></th>
      <th width="20"><span>Surveys Complete</span></th>
      <th width="20"><span>Placement Allocated</span></th>
      <th width="20"><span>Placement Available</span></th>
      <th width="20"><span>Placement Group Allocated</span></th>
      <th width="20"><span>Research Scientist Allocated</span></th>
    </tr>
  </thead>
  <tbody>
    <% @Users.each do |this_user| %>
    <tr>
      <td><a href="mailto:<%= this_user.addressable %>"><%= this_user.name %></a> [<%= link_to "Profile", "/usertools/#{this_user.id}" %>] <% if this_user.id == 93 || this_user.id == 99 %><%= icon :star, class: "text-danger", title: "Do not group these students." %><% end %></td>
      <td><%= this_user.major %></td>
      <td><%= this_user.student_group_id %></td>
      <td><% if Signature.where(user_id: this_user.id).count >=1 %><%= icon :ok %><% else %><%= icon :remove %><% end %></td>
      <td><% if Answer.where(user_id: this_user.id).count >=1 %><%= icon :ok %><% else %><%= icon :remove %><% end %></td>
      <td><% if this_user.industry_id.present? %><%= icon :ok %><% else %><%= icon :remove %><% end %></td>
      <td><% if Industry.find_by_id(this_user.industry_id).present? && Industry.find_by_id(this_user.industry_id).enabled %><%= icon :ok %><% else %><%= icon :remove %><% end %></td>
      <td><% if this_user.student_group.present? %><%= icon :ok %><% else %><%= icon :remove %><% end %></td>
      <td><% if this_user.student_group.present? && this_user.student_group.research_scientists.count >= 1 %><%= icon :ok %><% else %><%= icon :remove %><% end %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<script>
$(function () {
  $('[data-toggle="tooltip"]').tooltip()
})

$(function() {
    var header_height = 190;
    $('table th span').each(function() {
        if ($(this).outerWidth() > header_height) header_height = $(this).outerWidth();
    });

    $('table th').height(header_height);
});
</script>
