<%= form_for(industry_presentation, layout: :basic) do |f| %>
  <% if industry_presentation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(industry_presentation.errors.count, "error") %> prohibited this industry_presentation from being saved:</h2>

      <ul>
      <% industry_presentation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.select :industry_id, options_from_collection_for_select(Industry.where(active: true), 'id', 'name') %>
  </div>

  <div class="field">
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <% if industry_presentation.presentation_file_name.present? %>
      Existing Attachment: <%= icon :paperclip %>
      <%= industry_presentation.presentation_file_name %>
    <% end %>
    <%= f.file_field :presentation, class: "form-control" %>
  </div>

  <div class="field">
    <% if industry_presentation.script_file_name.present? %>
      Existing Attachment: <%= icon :paperclip %>
      <%= industry_presentation.script_file_name %>
    <% end %>
    <%= f.file_field :script, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
