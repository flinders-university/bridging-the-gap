<% title "Sign up" %>
<h2>Sign up</h2>
<p>Welcome to <%= t(:project) %>. Please enter your details below to begin. We recommend using your institution allocated email address, or the email address you have used to communicate with us previously.</p>
<br>
<ul class="nav nav-tabs">
  <li role="presentation"><a href="<%= new_user_session_path %>">Log In</a></li>
  <li role="presentation" class="active"><a href="<%= new_user_registration_path %>">Register</a></li>
  <li role="presentation"><a href="<%= new_user_password_path %>">Forgot Password</a></li>
  <li role="presentation"><a href="<%= new_user_confirmation_path %>">No Confirmation Email</a></li>
</ul>
<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="col-md-6"><%= f.label :firstname, value: "Given Name" %>
    <%= f.text_field :firstname, autofocus: true, class: "form-control" %></div>
    <div class="col-md-6"><%= f.label :lastname, value: "Surname" %>
    <%= f.text_field :lastname, autofocus: true, class: "form-control" %></div>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class="col-md-6">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <br>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %> <br><br>
    <%# render "devise/shared/links" %>
    <hr>
  </div>
<% end %>

