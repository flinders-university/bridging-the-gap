<% title @i_question.i_survey.name_and_group + " Question" %>
<div class="clearfix"></div>
<div class="pull-right">
  <br>
  <%= link_to "Back to survey", i_survey_path(@i_question.i_survey), class: "btn btn-primary" %>
</div>
<h1><%= @i_question.i_survey.title %> Question Definition</h1>
<hr>

<p>
  <strong>Question order:</strong>
  <%= @i_question.order %>
</p>

<p>
  <strong>Description/Question:</strong>
  <%= @i_question.description %>
</p>

<p>
  <strong>Type:</strong>
  <% case @i_question.input_type %>
  <% when 1 %>
  Text Area Input
  <% when 2 %>
  Text Box Input (smaller input)
  <% when 3 %>
  Scale Input (1-5)
  <% when 4 %>
  Check Box Input
  <% when 5 %>
  Agree Box Input (User must check to continue)
  <% end %>
</p>

<p>
  <strong>Grouping value:</strong>
  <%= @i_question.grouping_value %> <br>
  <em>Check your coding for this detail</em>
</p>

<p>
  <strong>Coding details:</strong>
  <%= mdrender(@i_question.i_survey.coding_explanation).html_safe %>
</p>

<p>
  <strong>Enabled:</strong>
  <% if @i_question.enabled %> <%= icon :ok %> <% else %> <%= icon :remove %> <% end %>
</p>

<p>
  <strong>Comment:</strong>
  <%= mdrender(@i_question.comment).html_safe %>
</p>

<%= link_to 'Edit Question', edit_i_question_path(@i_question), class: "btn btn-primary" %> <%= link_to 'Back', i_questions_path, class: "btn btn-warning" %>
