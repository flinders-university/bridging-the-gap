<% title "Preservice Teacher Registrations" %>
<div class="clearfix"></div>
<div class="pull-right">
  <br>
  <a href="<%= root_url %>" class="btn btn-primary">Dashboard</a>
</div>
<h1>Preservice Teacher Registrations</h1>
<hr>
<% if @stc_count < 1 %>
<p class="text-center lead">There are no registrations at this time.</p>
<% else %>
<div class="list-group">
  <% @stcs.each do |stc| %>
  <div class="list-group-item">
    <%= stc.name %> with contact <a href="mailto:<%= "\"#{stc.name}\" <#{stc.email}>" %>"><%= stc.email %></a>
    <br>
    <pre><%= stc.inspect %></pre>
    <div class="pull-right">
      <%= form_tag("/conference_management/destroy_pst", method: :delete) do %>
        <%= hidden_field_tag(:stc_id, stc.id) %>
        <%= submit_tag("x", class: "btn btn-danger btn-xs") %>
      <% end %>
    </div>
    <div class="clearfix"></div>
  </div>
  <% end %>
</div>
<% end %>
